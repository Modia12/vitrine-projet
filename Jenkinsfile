pipeline {
    agent any
    
    environment {
        DOCKER_IMAGE = 'spray-info'
        DOCKER_TAG = "${env.BUILD_NUMBER}"
        NODE_VERSION = '20'
    }
    
    stages {
        stage('Checkout') {
            steps {
                echo 'üì¶ R√©cup√©ration du code source...'
                checkout scm
            }
        }
        
        stage('Check Prerequisites') {
            steps {
                script {
                    echo 'üîç V√©rification des pr√©requis...'
                    
                    // V√©rifier si Docker est disponible
                    def dockerAvailable = sh(script: 'command -v docker', returnStatus: true) == 0
                    env.DOCKER_AVAILABLE = dockerAvailable.toString()
                    
                    if (dockerAvailable) {
                        echo '‚úÖ Docker est disponible'
                    } else {
                        echo '‚ö†Ô∏è Docker n\'est pas disponible'
                    }
                    
                    // V√©rifier si Node.js est disponible
                    def nodeAvailable = sh(script: 'command -v node', returnStatus: true) == 0
                    env.NODE_AVAILABLE = nodeAvailable.toString()
                    
                    if (nodeAvailable) {
                        def nodeVersion = sh(script: 'node --version', returnStdout: true).trim()
                        echo "‚úÖ Node.js est disponible: ${nodeVersion}"
                    } else {
                        echo '‚ö†Ô∏è Node.js n\'est pas disponible localement'
                    }
                }
            }
        }
        
        stage('Install Dependencies') {
            steps {
                script {
                    echo 'üì• Installation des d√©pendances...'
                    
                    // Si Node.js est disponible localement, l'utiliser directement
                    if (env.NODE_AVAILABLE == 'true') {
                        echo 'üü¢ Utilisation de Node.js local'
                        sh '''
                            node --version
                            npm --version
                            npm ci --prefer-offline --no-audit || npm install
                        '''
                    }
                    // Sinon, utiliser Docker si disponible
                    else if (env.DOCKER_AVAILABLE == 'true') {
                        echo 'üê≥ Utilisation de Docker avec Node.js'
                        sh '''
                            docker run --rm \
                                -v "$(pwd)":/app \
                                -w /app \
                                node:20-alpine \
                                sh -c "npm ci --prefer-offline --no-audit || npm install"
                        '''
                    }
                    // Sinon, installer Node.js via nvm
                    else {
                        echo 'üì¶ Installation de Node.js via nvm'
                        sh '''
                            # Installer nvm si n√©cessaire
                            if [ ! -d "$HOME/.nvm" ]; then
                                curl -o- https://raw.githubusercontent.com/nvm-sh/nvm/v0.39.0/install.sh | bash
                            fi
                            
                            # Charger nvm
                            export NVM_DIR="$HOME/.nvm"
                            [ -s "$NVM_DIR/nvm.sh" ] && . "$NVM_DIR/nvm.sh"
                            
                            # Installer et utiliser Node.js 20
                            nvm install 20
                            nvm use 20
                            
                            # Installer les d√©pendances
                            npm ci --prefer-offline --no-audit || npm install
                        '''
                    }
                    
                    echo '‚úÖ D√©pendances install√©es avec succ√®s'
                }
            }
        }
        
        stage('Lint') {
            steps {
                script {
                    echo 'üîç V√©rification du code...'
                    
                    if (env.NODE_AVAILABLE == 'true') {
                        sh 'npm run lint || echo "‚ö†Ô∏è Lint warnings trouv√©s"'
                    } else if (env.DOCKER_AVAILABLE == 'true') {
                        sh '''
                            docker run --rm \
                                -v "$(pwd)":/app \
                                -w /app \
                                node:20-alpine \
                                sh -c "npm run lint || echo '‚ö†Ô∏è Lint warnings trouv√©s'"
                        '''
                    } else {
                        sh '''
                            export NVM_DIR="$HOME/.nvm"
                            [ -s "$NVM_DIR/nvm.sh" ] && . "$NVM_DIR/nvm.sh"
                            nvm use 20
                            npm run lint || echo "‚ö†Ô∏è Lint warnings trouv√©s"
                        '''
                    }
                }
            }
        }
        
        stage('Build Application') {
            steps {
                script {
                    echo 'üèóÔ∏è Construction de l\'application...'
                    
                    if (env.NODE_AVAILABLE == 'true') {
                        sh 'npm run build'
                    } else if (env.DOCKER_AVAILABLE == 'true') {
                        sh '''
                            docker run --rm \
                                -v "$(pwd)":/app \
                                -w /app \
                                node:20-alpine \
                                npm run build
                        '''
                    } else {
                        sh '''
                            export NVM_DIR="$HOME/.nvm"
                            [ -s "$NVM_DIR/nvm.sh" ] && . "$NVM_DIR/nvm.sh"
                            nvm use 20
                            npm run build
                        '''
                    }
                    
                    echo '‚úÖ Application construite avec succ√®s'
                }
            }
        }
        
        stage('Build Docker Image') {
            when {
                expression { env.DOCKER_AVAILABLE == 'true' }
            }
            steps {
                script {
                    echo 'üê≥ Construction de l\'image Docker...'
                    
                    try {
                        sh """
                            echo "üìã V√©rification des fichiers n√©cessaires..."
                            ls -la
                            
                            echo "üî® Construction de l'image Docker..."
                            docker build \
                                --no-cache \
                                --progress=plain \
                                -t ${DOCKER_IMAGE}:${DOCKER_TAG} \
                                -t ${DOCKER_IMAGE}:latest \
                                . 2>&1 | tee docker-build.log
                            
                            echo "‚úÖ Image Docker construite avec succ√®s"
                            docker images | grep ${DOCKER_IMAGE}
                        """
                    } catch (Exception e) {
                        echo "‚ùå Erreur lors de la construction de l'image Docker"
                        sh "cat docker-build.log || true"
                        throw e
                    }
                }
            }
        }
        
        stage('Test Docker Image') {
            when {
                expression { env.DOCKER_AVAILABLE == 'true' }
            }
            steps {
                script {
                    echo 'üß™ Test de l\'image Docker...'
                    
                    try {
                        sh """
                            echo "üßπ Nettoyage des conteneurs existants..."
                            docker stop test-spray-info 2>/dev/null || true
                            docker rm test-spray-info 2>/dev/null || true
                            
                            echo "üöÄ D√©marrage du conteneur de test..."
                            docker run -d \
                                --name test-spray-info \
                                -p 3001:3000 \
                                ${DOCKER_IMAGE}:${DOCKER_TAG}
                            
                            echo "‚è≥ Attente du d√©marrage (15 secondes)..."
                            sleep 15
                            
                            echo "üìã V√©rification des logs du conteneur..."
                            docker logs test-spray-info
                            
                            echo "üîç Test de l'application..."
                            for i in 1 2 3 4 5; do
                                if curl -f -s http://localhost:3001 > /dev/null; then
                                    echo "‚úÖ Application r√©pond correctement!"
                                    break
                                else
                                    echo "‚è≥ Tentative \$i/5..."
                                    sleep 3
                                fi
                            done
                            
                            # V√©rifier une derni√®re fois
                            curl -f http://localhost:3001 || (
                                echo "‚ùå L'application ne r√©pond pas"
                                docker logs test-spray-info
                                exit 1
                            )
                            
                            echo "üßπ Nettoyage du conteneur de test..."
                            docker stop test-spray-info
                            docker rm test-spray-info
                        """
                    } catch (Exception e) {
                        echo "‚ùå Erreur lors du test de l'image Docker"
                        sh "docker logs test-spray-info 2>/dev/null || true"
                        sh "docker stop test-spray-info 2>/dev/null || true"
                        sh "docker rm test-spray-info 2>/dev/null || true"
                        throw e
                    }
                }
            }
        }
        
        stage('Deploy') {
            when {
                expression { env.DOCKER_AVAILABLE == 'true' }
            }
            steps {
                script {
                    echo 'üöÄ D√©ploiement de l\'application...'
                    
                    def deployPort = env.DEPLOY_PORT ?: '3000'
                    def containerName = 'spray-info-app'
                    def oldContainerName = "${containerName}-old"
                    
                    try {
                        sh """
                            echo "üìã Configuration du d√©ploiement..."
                            echo "  - Image: ${DOCKER_IMAGE}:${DOCKER_TAG}"
                            echo "  - Port: ${deployPort}"
                            echo "  - Conteneur: ${containerName}"
                            
                            if docker ps -a | grep -q ${containerName}; then
                                echo "üíæ Sauvegarde de l'ancien conteneur..."
                                docker rename ${containerName} ${oldContainerName} 2>/dev/null || true
                                docker stop ${oldContainerName} 2>/dev/null || true
                            fi
                            
                            echo "üöÄ D√©marrage du nouveau conteneur..."
                            docker run -d \
                                --name ${containerName} \
                                -p ${deployPort}:3000 \
                                --restart unless-stopped \
                                -e NODE_ENV=production \
                                ${DOCKER_IMAGE}:${DOCKER_TAG}
                            
                            echo "‚è≥ Attente du d√©marrage de l'application..."
                            sleep 10
                            
                            echo "üè• V√©rification de la sant√© de l'application..."
                            for i in 1 2 3 4 5; do
                                if curl -f -s http://localhost:${deployPort} > /dev/null; then
                                    echo "‚úÖ Application d√©ploy√©e avec succ√®s!"
                                    echo "üåê Accessible sur: http://localhost:${deployPort}"
                                    
                                    if docker ps -a | grep -q ${oldContainerName}; then
                                        echo "üßπ Suppression de l'ancien conteneur..."
                                        docker rm ${oldContainerName} 2>/dev/null || true
                                    fi
                                    
                                    exit 0
                                else
                                    echo "‚è≥ Tentative \$i/5 - En attente..."
                                    sleep 5
                                fi
                            done
                            
                            echo "‚ùå L'application ne r√©pond pas apr√®s le d√©ploiement"
                            echo "üìã Logs du conteneur:"
                            docker logs ${containerName}
                            
                            echo "üîÑ Rollback vers l'ancienne version..."
                            docker stop ${containerName} 2>/dev/null || true
                            docker rm ${containerName} 2>/dev/null || true
                            
                            if docker ps -a | grep -q ${oldContainerName}; then
                                docker rename ${oldContainerName} ${containerName}
                                docker start ${containerName}
                                echo "‚úÖ Rollback effectu√© - ancienne version restaur√©e"
                            fi
                            
                            exit 1
                        """
                    } catch (Exception e) {
                        echo "‚ùå Erreur lors du d√©ploiement"
                        sh """
                            echo "üìã Logs du conteneur en √©chec:"
                            docker logs ${containerName} 2>/dev/null || true
                            
                            echo "üîÑ Tentative de rollback..."
                            docker stop ${containerName} 2>/dev/null || true
                            docker rm ${containerName} 2>/dev/null || true
                            
                            if docker ps -a | grep -q ${oldContainerName}; then
                                docker rename ${oldContainerName} ${containerName}
                                docker start ${containerName}
                                echo "‚úÖ Rollback effectu√©"
                            fi
                        """
                        throw e
                    }
                }
            }
        }
        
        stage('Verify Deployment') {
            when {
                expression { env.DOCKER_AVAILABLE == 'true' }
            }
            steps {
                script {
                    echo 'üîç V√©rification finale du d√©ploiement...'
                    
                    def deployPort = env.DEPLOY_PORT ?: '3000'
                    
                    sh """
                        echo "üìä Statut du conteneur:"
                        docker ps | grep spray-info-app || echo "‚ö†Ô∏è Conteneur non trouv√©"
                        
                        echo ""
                        echo "üìã Derniers logs:"
                        docker logs --tail 20 spray-info-app
                        
                        echo ""
                        echo "üè• Test de sant√© final:"
                        curl -f -s http://localhost:${deployPort} > /dev/null && \
                            echo "‚úÖ Application fonctionne correctement" || \
                            echo "‚ùå Application ne r√©pond pas"
                        
                        echo ""
                        echo "üåê URL de l'application: http://localhost:${deployPort}"
                    """
                }
            }
        }
    }
    
    post {
        always {
            echo 'üßπ Nettoyage...'
            sh '''
                # Nettoyer les conteneurs de test
                docker stop test-spray-info 2>/dev/null || true
                docker rm test-spray-info 2>/dev/null || true
                
                # Nettoyer les anciens conteneurs de backup
                docker rm spray-info-app-old 2>/dev/null || true
                
                # Nettoyer les images non utilis√©es (garder les 3 derni√®res versions)
                docker images | grep spray-info | tail -n +4 | awk '{print $3}' | xargs -r docker rmi 2>/dev/null || true
            '''
        }
        success {
            echo '‚úÖ Pipeline ex√©cut√© avec succ√®s!'
            script {
                def deployPort = env.DEPLOY_PORT ?: '3000'
                echo "üéâ Application disponible sur: http://localhost:${deployPort}"
            }
        }
        failure {
            echo '‚ùå Le pipeline a √©chou√©!'
            sh '''
                echo "üìã Informations de d√©bogage:"
                echo ""
                echo "Conteneurs en cours d'ex√©cution:"
                docker ps -a | grep spray-info || echo "Aucun conteneur spray-info trouv√©"
                echo ""
                echo "Images disponibles:"
                docker images | grep spray-info || echo "Aucune image spray-info trouv√©e"
                echo ""
                echo "Logs des conteneurs:"
                docker logs test-spray-info 2>/dev/null || true
                docker logs spray-info-app 2>/dev/null || true
            '''
        }
    }
}
